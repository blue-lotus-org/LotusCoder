# AI Coding App Environment Variables

# Database Configuration
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_coding_app
DB_USER=ai_coding_app

# AI Provider API Keys and Endpoints
# Primary Providers
OPENAI_API_KEY=sk-your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# Custom OpenAI-Compatible Providers
# Provider 1 (Ollama, Together AI, Fireworks, etc.)
CUSTOM_1_API_KEY=your_custom_1_api_key_here
CUSTOM_1_API_ENDPOINT=https://api.together.xyz/v1
CUSTOM_1_MODEL=meta-llama/Llama-2-70b-chat-hf
CUSTOM_1_HEADERS={"Authorization": "Bearer ${CUSTOM_1_API_KEY}"}  # Optional custom headers

# Provider 2 (OpenRouter, Mistral, etc.)
CUSTOM_2_API_KEY=your_custom_2_api_key_here
CUSTOM_2_API_ENDPOINT=https://openrouter.ai/api/v1
CUSTOM_2_MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1
CUSTOM_2_HEADERS={}  # Optional custom headers

# Provider 3 (Local/OpenAI compatible endpoints)
CUSTOM_3_API_KEY=your_custom_3_api_key_here
CUSTOM_3_API_ENDPOINT=http://localhost:8000/v1
CUSTOM_3_MODEL=local-model
CUSTOM_3_HEADERS={}  # Optional custom headers

# Local/Ollama Configuration
OLLAMA_API_KEY=  # Usually empty for local models
OLLAMA_MODEL=llama2:70b

# GPU Performance Settings
GPU_ENABLED=true
GPU_THREADS=4
GPU_MEMORY_FRACTION=0.8
CUDA_ENABLED=true
OPENCL_ENABLED=false
GPU_VENDOR=auto

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
NODE_ENV=development
PORT=3001

# JWT Configuration (if implementing authentication)
JWT_SECRET=your_jwt_secret_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads